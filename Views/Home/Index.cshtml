<input asp-for="ReCaptchaSiteKey" type="hidden"/>

<section id="home_slider" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active slide_image" style="background-image: url('images/home/baby_bath_slide.png')">
      <div class="carousel-caption d-none d-md-block">
        @if (User.IsInRole(Statics.Roles.Admin))
        {
              <button id="edit_slide_toggle" type="button" class="btn mx-2 edit" data-bs-toggle="modal" data-bs-target="#edit_slide_modal"><i class="bi bi-pencil-fill"></i>&nbsp; Edit Slide</button>
        }
        <h5>caption header</h5>
        <p>Some representative placeholder content for the first slide.</p>
      </div>
    </div>
    <div class="carousel-item slide_image" style="background-image: url('images/home/beauty_sunlight_love.png')">
    </div>
    <div class="carousel-item slide_image" style="background-image: url('images/home/hand_lotion_slide.png')">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#home_slider" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#home_slider" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</section>
